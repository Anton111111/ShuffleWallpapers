<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

    </style>

    <!-- View Error Overlay -->
    <style name="AppTheme.ErrorOverlay.ErrorMessage" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/view_error_overlay_message_text</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:background">@color/button_background</item>
    </style>
</resources>
